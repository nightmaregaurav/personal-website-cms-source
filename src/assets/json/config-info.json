{
  "type": "OBJECT",
  "minCardinality": "Compulsory",
  "description": "Configuration data needed to run the website.",
  "example": {
    "setup-shortcut-key": {
      "type": "STRING",
      "minCardinality": "Compulsory",
      "description": "The key to press with ctrl + alt + shift to open the setup page.",
      "validation": {
        "pattern": "^[a-zA-Z0-9]{1}$",
        "linebreaks": false,
        "maxLength": 1
      },
      "example": "s"
    },
    "favicon": {
      "type": "IMAGE URL",
      "minCardinality": "Compulsory",
      "description": "URL to favicon image.",
      "example": "https://example.com/favicon.ico"
    },
    "apple-touch-icon": {
      "type": "IMAGE URL",
      "minCardinality": "Compulsory",
      "description": "URL to apple-touch-icon image.",
      "example": "https://example.com/apple-touch-icon.png"
    },
    "meta": {
      "type": "ARRAY OF OBJECT",
      "minCardinality": "Optional",
      "description": "Array of meta tags.",
      "example": {
        "0": {
          "name": {
            "type": "STRING",
            "minCardinality": "Compulsory",
            "description": "Name of meta tag.",
            "validation": {
              "linebreaks": false,
              "maxLength": 50
            },
            "example": "description"
          },
          "content": {
            "type": "STRING",
            "minCardinality": "Compulsory",
            "description": "Content of meta tag.",
            "validation": {
              "linebreaks": true,
              "maxLength": 100
            },
            "example": "This is a description."
          }
        }
      }
    },
    "main-title": {
      "type": "STRING",
      "minCardinality": "Compulsory",
      "description": "Main title of the website.",
      "validation": {
        "linebreaks": false,
        "maxLength": 75
      },
      "example": "Gaurav Nyaupane"
    },
    "full-name": {
      "type": "STRING",
      "minCardinality": "Compulsory",
      "description": "Full name of the website owner.",
      "validation": {
        "linebreaks": false,
        "maxLength": 50
      },
      "example": "Gaurav Nyaupane"
    },
    "profile-pic": {
      "type": "IMAGE URL",
      "minCardinality": "Compulsory",
      "description": "URL to profile picture to show in sidebar.",
      "example": "https://example.com/profile-pic.jpg"
    },
    "profile-alt": {
      "type": "STRING",
      "minCardinality": "Optional",
      "description": "Alt text for profile picture.",
      "validation": {
        "linebreaks": false,
        "maxLength": 100
      },
      "example": "Profile picture of Gaurav Nyaupane"
    },
    "social-urls": {
      "type": "ARRAY OF OBJECT",
      "minCardinality": "Optional",
      "description": "Array of social media URLs.",
      "example": {
        "0": {
          "name": {
            "type": "STRING",
            "minCardinality": "Compulsory",
            "description": "Name of social media in lowercase dash(-) separated if name has space.",
            "validation": {
              "pattern": "^[a-z0-9-]+$",
              "linebreaks": false,
              "maxLength": 25
            },
            "example": "facebook"
          },
          "url": {
            "type": "URL",
            "minCardinality": "Compulsory",
            "description": "URL to social media profile.",
            "example": "https://www.facebook.com/nightmaregaurav"
          }
        }
      }
    },
    "resume": {
      "type": "URL",
      "minCardinality": "Optional",
      "description": "URL to resume.",
      "example": "https://example.com/resume.pdf"
    },
    "messageAPI": {
      "type": "URL",
      "minCardinality": "Optional",
      "description": "URL to message API endpoint that accept POST request with JSON body containing 'name', 'email', 'message', 'ip' as keys.",
      "example": "https://example.com/message"
    },
    "intro": {
      "type": "OBJECT",
      "minCardinality": "Optional",
      "description": "Data needed for intro page.",
      "example": {
        "pic": {
          "type": "IMAGE URL",
          "minCardinality": "Compulsory",
          "description": "URL to profile picture to show in intro page.",
          "example": "https://example.com/intro-pic.jpg"
        },
        "words": {
          "type": "ARRAY OF STRING",
          "minCardinality":"Compulsory",
          "description": "Words to tell what you are in intro page.",
          "example": {
            "0": "Web Developer",
            "1": "Freelancer"
          }
        }
      }
    },
    "about": {
      "type": "OBJECT",
      "minCardinality": "Optional",
      "description": "Data needed for about page.",
      "example": {
        "pic": {
          "type": "IMAGE URL",
          "minCardinality": "Compulsory",
          "description": "URL to profile picture to show in about page.",
          "example": "https://example.com/about-pic.jpg"
        },
        "image-alt": {
          "type": "STRING",
          "minCardinality": "Optional",
          "description": "Alt text for profile picture in about page.",
          "validation": {
            "linebreaks": false,
            "maxLength": 100
          },
          "example": "Picture of Gaurav Nyaupane"
        },
        "intro": {
          "type": "STRING",
          "minCardinality": "Compulsory",
          "description": "Intro text to show in about page.",
          "validation": {
            "linebreaks": true,
            "maxLength": 250
          },
          "example": "I am a fullstack developer and freelancer. I have been working in software development for the last 5 years. I have worked on various projects and have spearheaded various projects. I am always looking for new challenges to learn new technologies."
        },
        "info": {
          "type": "ARRAY OF OBJECT",
          "minCardinality": "Optional",
          "description": "Array of info to show in about page.",
          "example": {
            "0": {
              "title": {
                "type": "STRING",
                "minCardinality": "Compulsory",
                "description": "Title of info.",
                "validation": {
                  "linebreaks": false,
                  "maxLength": 50
                },
                "example": "Email"
              },
              "text": {
                "type": "STRING",
                "minCardinality": "Compulsory",
                "description": "Content of info.",
                "validation": {
                  "linebreaks": true,
                  "maxLength": 100
                },
                "example": "abc@mail.com"
              }
            }
          }
        },
        "testimonials-intro": {
          "type": "STRING",
          "minCardinality": "Optional",
          "description": "Intro text to show in testimonials section of about page.",
          "validation": {
            "linebreaks": true,
            "maxLength": 250
          },
          "example": "Here are some testimonials from my clients."
        },
        "testimonials": {
          "type": "ARRAY OF OBJECT",
          "minCardinality": "Optional",
          "description": "Array of testimonials to show in about page.",
          "example": {
            "0": {
              "name": {
                "type": "STRING",
                "minCardinality": "Optional",
                "description": "Name of client.",
                "validation": {
                  "linebreaks": false,
                  "maxLength": 50
                },
                "example": "John Doe"
              },
              "pic": {
                "type": "IMAGE URL",
                "minCardinality": "Optional",
                "description": "URL to picture of client.",
                "example": "https://example.com/john-doe.jpg"
              },
              "company": {
                "type": "STRING",
                "minCardinality": "Optional",
                "description": "Company of client.",
                "validation": {
                  "linebreaks": false,
                  "maxLength": 100
                },
                "example": "ABC Company"
              },
              "designation": {
                "type": "STRING",
                "minCardinality": "Optional",
                "description": "Designation of client.",
                "validation": {
                  "linebreaks": false,
                  "maxLength": 100
                },
                "example": "CEO"
              },
              "on": {
                "type": "STRING",
                "minCardinality": "Optional",
                "description": "Date of testimonial.",
                "validation": {
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                  "linebreaks": false,
                  "maxLength": 10
                },
                "example": "2020-01-01"
              },
              "said": {
                "type": "STRING",
                "minCardinality": "Optional",
                "description": "Testimonial of client.",
                "validation": {
                  "linebreaks": true,
                  "maxLength": 250
                },
                "example": "Gaurav is a great developer. He is very professional and always delivers on time. I have worked with Gaurav for the last 5 years. He is a great developer and has spearheaded many projects."
              },
              "highlight": {
                "type": "STRING",
                "minCardinality": "Optional",
                "description": "Highlight testimonial of client.",
                "validation": {
                  "linebreaks": false,
                  "maxLength": 100
                },
                "example": "I had never met such a nice friend and a great mentor in a same person before i met him."
              }
            }
          }
        }
      }
    },
    "education": {
      "type": "OBJECT",
      "minCardinality": "Optional",
      "description": "Data needed for education page.",
